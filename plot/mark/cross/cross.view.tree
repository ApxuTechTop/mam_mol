$mol_plot_mark_cross $mol_plot_graph
	labels /string
	gap 4
	nearest_index -1
	nearest_delta Infinity
	title \X: {x}, Y: {y}
	dimensions $mol_vector_2d /
		$mol_vector_range /
			Infinity
			-Infinity
		$mol_vector_range /
			Infinity
			-Infinity
	sub /
		<= Curve $mol_svg_path
			geometry <= curve \
		<= Labels $mol_svg_text_box
			pos_x <= title_pos_x \100%
			pos_y <= title_pos_y \14px
			text <= nearest_title \
